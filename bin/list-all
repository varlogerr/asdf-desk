#!/usr/bin/env bash

releases_url=https://api.github.com/repos/jamesob/desk/releases
cmd="curl -s"

if [[ -n "${GITHUB_TOKEN}" ]]; then
  cmd+=" -H 'Authorization: token ${GITHUB_TOKEN}'"
fi
cmd+=" ${releases_url}"

eval "${cmd}" \
| grep -P '^\s*\"tag_name\":\s*\".+"' \
| sed -E 's/.*\"v(.+)\",/\1/g' \
| sort -n | xargs
